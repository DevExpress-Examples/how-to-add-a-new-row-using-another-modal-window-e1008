<Window x:Class="AddNewRow.CreateNewRowWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="CreateNewRowWindow" Height="300" Width="300">
	<DockPanel LastChildFill="False">
		<StackPanel DockPanel.Dock="Top">
			<DockPanel>
				<TextBlock Text="Text1: "/>
				<TextBox Name="text1" />
			</DockPanel>
			<DockPanel>
				<TextBlock Text="Text2: "/>
				<TextBox Name="text2" />
			</DockPanel>
			<DockPanel>
				<TextBlock Text="Text3: "/>
				<TextBox Name="text3" />
			</DockPanel>
		</StackPanel>
		<StackPanel VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right" Orientation="Horizontal">
			<Button IsDefault="True" Click="Button_Click" Width="55">OK</Button>
			<Button IsCancel="True" Width="73">Cancel</Button>
		</StackPanel>
	</DockPanel>
</Window>
