<Window x:Class="AddNewRow.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:local="clr-namespace:AddNewRow"
    Title="Window1" Height="400" Width="500">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top" Name="addNewRowButton" 
                Content="Add new row..." Focusable="False"
                Click="addNewRowButton_Click"/>
        <dxg:GridControl x:Name="grid" AutoPopulateColumns="True">
            <dxg:GridControl.View>
                <dxg:TableView x:Name="view" AutoWidth="True"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </DockPanel>
</Window>

